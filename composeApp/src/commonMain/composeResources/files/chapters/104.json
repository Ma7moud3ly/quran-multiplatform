{
    "id": 104,
    "name": "الهمزة",
    "transliteration": "Al-Humazah",
    "type": "meccan",
    "verses": [
        {
            "id": 1,
            "text": "وَيۡلٞ لِّكُلِّ هُمَزَةٖ لُّمَزَةٍ",
            "textNormalized": "ويل لكل همزه لمزه",
            "transliteration": "Waylun likulli humazatin lumazatin"
        },
        {
            "id": 2,
            "text": "ٱلَّذِي جَمَعَ مَالٗا وَعَدَّدَهُۥ",
            "textNormalized": "الذي جمع مالا وعدده",
            "transliteration": "Allathee jamaAAa malan waAAaddadahu"
        },
        {
            "id": 3,
            "text": "يَحۡسَبُ أَنَّ مَالَهُۥٓ أَخۡلَدَهُۥ",
            "textNormalized": "يحسب ان ماله اخلده",
            "transliteration": "Yahsabu anna malahu akhladahu"
        },
        {
            "id": 4,
            "text": "كَلَّاۖ لَيُنۢبَذَنَّ فِي ٱلۡحُطَمَةِ",
            "textNormalized": "كلا لينبذن في الحطمه",
            "transliteration": "Kalla layunbathanna fee alhutamati"
        },
        {
            "id": 5,
            "text": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡحُطَمَةُ",
            "textNormalized": "وما ادريك ما الحطمه",
            "transliteration": "Wama adraka ma alhutamatu"
        },
        {
            "id": 6,
            "text": "نَارُ ٱللَّهِ ٱلۡمُوقَدَةُ",
            "textNormalized": "نار الله الموقده",
            "transliteration": "Naru Allahi almooqadatu"
        },
        {
            "id": 7,
            "text": "ٱلَّتِي تَطَّلِعُ عَلَى ٱلۡأَفۡـِٔدَةِ",
            "textNormalized": "التي تطلع علي الافده",
            "transliteration": "Allatee tattaliAAu AAala alafidati"
        },
        {
            "id": 8,
            "text": "إِنَّهَا عَلَيۡهِم مُّؤۡصَدَةٞ",
            "textNormalized": "انها عليهم موصده",
            "transliteration": "lnnaha AAalayhim musadatun"
        },
        {
            "id": 9,
            "text": "فِي عَمَدٖ مُّمَدَّدَةِۭ",
            "textNormalized": "في عمد ممدده",
            "transliteration": "Fee AAamadin mumaddadatin"
        }
    ]
}