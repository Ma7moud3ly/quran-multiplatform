{
    "id": 70,
    "name": "المعارج",
    "transliteration": "Al-Ma'arij",
    "type": "meccan",
    "verses": [
        {
            "id": 1,
            "text": "سَأَلَ سَآئِلُۢ بِعَذَابٖ وَاقِعٖ",
            "textNormalized": "سال سايل بعذاب واقع",
            "transliteration": "Saala sailun biAAathabin waqiAAin"
        },
        {
            "id": 2,
            "text": "لِّلۡكَٰفِرِينَ لَيۡسَ لَهُۥ دَافِعٞ",
            "textNormalized": "للكفرين ليس له دافع",
            "transliteration": "Lilkafireena laysa lahu dafiAAun"
        },
        {
            "id": 3,
            "text": "مِّنَ ٱللَّهِ ذِي ٱلۡمَعَارِجِ",
            "textNormalized": "من الله ذي المعارج",
            "transliteration": "Mina Allahi thee almaAAariji"
        },
        {
            "id": 4,
            "text": "تَعۡرُجُ ٱلۡمَلَـٰٓئِكَةُ وَٱلرُّوحُ إِلَيۡهِ فِي يَوۡمٖ كَانَ مِقۡدَارُهُۥ خَمۡسِينَ أَلۡفَ سَنَةٖ",
            "textNormalized": "تعرج المليكه والروح اليه في يوم كان مقداره خمسين الف سنه",
            "transliteration": "TaAAruju almalaikatu waalrroohu ilayhi fee yawmin kana miqdaruhu khamseena alfa sanatin"
        },
        {
            "id": 5,
            "text": "فَٱصۡبِرۡ صَبۡرٗا جَمِيلًا",
            "textNormalized": "فاصبر صبرا جميلا",
            "transliteration": "Faisbir sabran jameelan"
        },
        {
            "id": 6,
            "text": "إِنَّهُمۡ يَرَوۡنَهُۥ بَعِيدٗا",
            "textNormalized": "انهم يرونه بعيدا",
            "transliteration": "Innahum yarawnahu baAAeedan"
        },
        {
            "id": 7,
            "text": "وَنَرَىٰهُ قَرِيبٗا",
            "textNormalized": "ونريه قريبا",
            "transliteration": "Wanarahu qareeban"
        },
        {
            "id": 8,
            "text": "يَوۡمَ تَكُونُ ٱلسَّمَآءُ كَٱلۡمُهۡلِ",
            "textNormalized": "يوم تكون السماء كالمهل",
            "transliteration": "Yawma takoonu alssamao kaalmuhli"
        },
        {
            "id": 9,
            "text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ",
            "textNormalized": "وتكون الجبال كالعهن",
            "transliteration": "Watakoonu aljibalu kaalAAihni"
        },
        {
            "id": 10,
            "text": "وَلَا يَسۡـَٔلُ حَمِيمٌ حَمِيمٗا",
            "textNormalized": "ولا يسل حميم حميما",
            "transliteration": "Wala yasalu hameemun hameeman"
        },
        {
            "id": 11,
            "text": "يُبَصَّرُونَهُمۡۚ يَوَدُّ ٱلۡمُجۡرِمُ لَوۡ يَفۡتَدِي مِنۡ عَذَابِ يَوۡمِئِذِۭ بِبَنِيهِ",
            "textNormalized": "يبصرونهم يود المجرم لو يفتدي من عذاب يوميذ ببنيه",
            "transliteration": "Yubassaroonahum yawaddu almujrimu law yaftadee min AAathabi yawmiithin bibaneehi"
        },
        {
            "id": 12,
            "text": "وَصَٰحِبَتِهِۦ وَأَخِيهِ",
            "textNormalized": "وصحبته واخيه",
            "transliteration": "Wasahibatihi waakheehi"
        },
        {
            "id": 13,
            "text": "وَفَصِيلَتِهِ ٱلَّتِي تُـٔۡوِيهِ",
            "textNormalized": "وفصيلته التي تويه",
            "transliteration": "Wafaseelatihi allatee tuweehi"
        },
        {
            "id": 14,
            "text": "وَمَن فِي ٱلۡأَرۡضِ جَمِيعٗا ثُمَّ يُنجِيهِ",
            "textNormalized": "ومن في الارض جميعا ثم ينجيه",
            "transliteration": "Waman fee alardi jameeAAan thumma yunjeehi"
        },
        {
            "id": 15,
            "text": "كَلَّآۖ إِنَّهَا لَظَىٰ",
            "textNormalized": "كلا انها لظي",
            "transliteration": "Kalla innaha latha"
        },
        {
            "id": 16,
            "text": "نَزَّاعَةٗ لِّلشَّوَىٰ",
            "textNormalized": "نزاعه للشوي",
            "transliteration": "NazzaAAatan lilshshawa"
        },
        {
            "id": 17,
            "text": "تَدۡعُواْ مَنۡ أَدۡبَرَ وَتَوَلَّىٰ",
            "textNormalized": "تدعوا من ادبر وتولي",
            "transliteration": "TadAAoo man adbara watawalla"
        },
        {
            "id": 18,
            "text": "وَجَمَعَ فَأَوۡعَىٰٓ",
            "textNormalized": "وجمع فاوعي",
            "transliteration": "WajamaAAa faawAAa"
        },
        {
            "id": 19,
            "text": "۞إِنَّ ٱلۡإِنسَٰنَ خُلِقَ هَلُوعًا",
            "textNormalized": "ان الانسن خلق هلوعا",
            "transliteration": "Inna alinsana khuliqa halooAAan"
        },
        {
            "id": 20,
            "text": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعٗا",
            "textNormalized": "اذا مسه الشر جزوعا",
            "transliteration": "Itha massahu alshsharru jazooAAan"
        },
        {
            "id": 21,
            "text": "وَإِذَا مَسَّهُ ٱلۡخَيۡرُ مَنُوعًا",
            "textNormalized": "واذا مسه الخير منوعا",
            "transliteration": "Waitha massahu alkhayru manooAAan"
        },
        {
            "id": 22,
            "text": "إِلَّا ٱلۡمُصَلِّينَ",
            "textNormalized": "الا المصلين",
            "transliteration": "Illa almusalleena"
        },
        {
            "id": 23,
            "text": "ٱلَّذِينَ هُمۡ عَلَىٰ صَلَاتِهِمۡ دَآئِمُونَ",
            "textNormalized": "الذين هم علي صلاتهم دايمون",
            "transliteration": "Allatheena hum AAala salatihim daimoona"
        },
        {
            "id": 24,
            "text": "وَٱلَّذِينَ فِيٓ أَمۡوَٰلِهِمۡ حَقّٞ مَّعۡلُومٞ",
            "textNormalized": "والذين في امولهم حق معلوم",
            "transliteration": "Waallatheena fee amwalihim haqqun maAAloomun"
        },
        {
            "id": 25,
            "text": "لِّلسَّآئِلِ وَٱلۡمَحۡرُومِ",
            "textNormalized": "للسايل والمحروم",
            "transliteration": "Lilssaili waalmahroomi"
        },
        {
            "id": 26,
            "text": "وَٱلَّذِينَ يُصَدِّقُونَ بِيَوۡمِ ٱلدِّينِ",
            "textNormalized": "والذين يصدقون بيوم الدين",
            "transliteration": "Waallatheena yusaddiqoona biyawmi alddeeni"
        },
        {
            "id": 27,
            "text": "وَٱلَّذِينَ هُم مِّنۡ عَذَابِ رَبِّهِم مُّشۡفِقُونَ",
            "textNormalized": "والذين هم من عذاب ربهم مشفقون",
            "transliteration": "Waallatheena hum min AAathabi rabbihim mushfiqoona"
        },
        {
            "id": 28,
            "text": "إِنَّ عَذَابَ رَبِّهِمۡ غَيۡرُ مَأۡمُونٖ",
            "textNormalized": "ان عذاب ربهم غير مامون",
            "transliteration": "Inna AAathaba rabbihim ghayru mamoonin"
        },
        {
            "id": 29,
            "text": "وَٱلَّذِينَ هُمۡ لِفُرُوجِهِمۡ حَٰفِظُونَ",
            "textNormalized": "والذين هم لفروجهم حفظون",
            "transliteration": "Waallatheena hum lifuroojihim hafithoona"
        },
        {
            "id": 30,
            "text": "إِلَّا عَلَىٰٓ أَزۡوَٰجِهِمۡ أَوۡ مَا مَلَكَتۡ أَيۡمَٰنُهُمۡ فَإِنَّهُمۡ غَيۡرُ مَلُومِينَ",
            "textNormalized": "الا علي ازوجهم او ما ملكت ايمنهم فانهم غير ملومين",
            "transliteration": "Illa AAala azwajihim aw ma malakat aymanuhum fainnahum ghayru maloomeena"
        },
        {
            "id": 31,
            "text": "فَمَنِ ٱبۡتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُوْلَـٰٓئِكَ هُمُ ٱلۡعَادُونَ",
            "textNormalized": "فمن ابتغي وراء ذلك فاوليك هم العادون",
            "transliteration": "Famani ibtagha waraa thalika faolaika humu alAAadoona"
        },
        {
            "id": 32,
            "text": "وَٱلَّذِينَ هُمۡ لِأَمَٰنَٰتِهِمۡ وَعَهۡدِهِمۡ رَٰعُونَ",
            "textNormalized": "والذين هم لامنتهم وعهدهم رعون",
            "transliteration": "Waallatheena hum liamanatihim waAAahdihim raAAoona"
        },
        {
            "id": 33,
            "text": "وَٱلَّذِينَ هُم بِشَهَٰدَٰتِهِمۡ قَآئِمُونَ",
            "textNormalized": "والذين هم بشهدتهم قايمون",
            "transliteration": "Waallatheena hum bishahadatihim qaimoona"
        },
        {
            "id": 34,
            "text": "وَٱلَّذِينَ هُمۡ عَلَىٰ صَلَاتِهِمۡ يُحَافِظُونَ",
            "textNormalized": "والذين هم علي صلاتهم يحافظون",
            "transliteration": "Waallatheena hum AAala salatihim yuhafithoona"
        },
        {
            "id": 35,
            "text": "أُوْلَـٰٓئِكَ فِي جَنَّـٰتٖ مُّكۡرَمُونَ",
            "textNormalized": "اوليك في جنت مكرمون",
            "transliteration": "Olaika fee jannatin mukramoona"
        },
        {
            "id": 36,
            "text": "فَمَالِ ٱلَّذِينَ كَفَرُواْ قِبَلَكَ مُهۡطِعِينَ",
            "textNormalized": "فمال الذين كفروا قبلك مهطعين",
            "transliteration": "Famali allatheena kafaroo qibalaka muhtiAAeena"
        },
        {
            "id": 37,
            "text": "عَنِ ٱلۡيَمِينِ وَعَنِ ٱلشِّمَالِ عِزِينَ",
            "textNormalized": "عن اليمين وعن الشمال عزين",
            "transliteration": "AAani alyameeni waAAani alshshimali AAizeena"
        },
        {
            "id": 38,
            "text": "أَيَطۡمَعُ كُلُّ ٱمۡرِيٕٖ مِّنۡهُمۡ أَن يُدۡخَلَ جَنَّةَ نَعِيمٖ",
            "textNormalized": "ايطمع كل امري منهم ان يدخل جنه نعيم",
            "transliteration": "AyatmaAAu kullu imriin minhum an yudkhala jannata naAAeemin"
        },
        {
            "id": 39,
            "text": "كَلَّآۖ إِنَّا خَلَقۡنَٰهُم مِّمَّا يَعۡلَمُونَ",
            "textNormalized": "كلا انا خلقنهم مما يعلمون",
            "transliteration": "Kalla inna khalaqnahum mimma yaAAlamoona"
        },
        {
            "id": 40,
            "text": "فَلَآ أُقۡسِمُ بِرَبِّ ٱلۡمَشَٰرِقِ وَٱلۡمَغَٰرِبِ إِنَّا لَقَٰدِرُونَ",
            "textNormalized": "فلا اقسم برب المشرق والمغرب انا لقدرون",
            "transliteration": "Fala oqsimu birabbi almashariqi waalmagharibi inna laqadiroona"
        },
        {
            "id": 41,
            "text": "عَلَىٰٓ أَن نُّبَدِّلَ خَيۡرٗا مِّنۡهُمۡ وَمَا نَحۡنُ بِمَسۡبُوقِينَ",
            "textNormalized": "علي ان نبدل خيرا منهم وما نحن بمسبوقين",
            "transliteration": "AAala an nubaddila khayran minhum wama nahnu bimasbooqeena"
        },
        {
            "id": 42,
            "text": "فَذَرۡهُمۡ يَخُوضُواْ وَيَلۡعَبُواْ حَتَّىٰ يُلَٰقُواْ يَوۡمَهُمُ ٱلَّذِي يُوعَدُونَ",
            "textNormalized": "فذرهم يخوضوا ويلعبوا حتي يلقوا يومهم الذي يوعدون",
            "transliteration": "Fatharhum yakhoodoo wayalAAaboo hatta yulaqoo yawmahumu allathee yooAAadoona"
        },
        {
            "id": 43,
            "text": "يَوۡمَ يَخۡرُجُونَ مِنَ ٱلۡأَجۡدَاثِ سِرَاعٗا كَأَنَّهُمۡ إِلَىٰ نُصُبٖ يُوفِضُونَ",
            "textNormalized": "يوم يخرجون من الاجداث سراعا كانهم الي نصب يوفضون",
            "transliteration": "Yawma yakhrujoona mina alajdathi siraAAan kaannahum ila nusubin yoofidoona"
        },
        {
            "id": 44,
            "text": "خَٰشِعَةً أَبۡصَٰرُهُمۡ تَرۡهَقُهُمۡ ذِلَّةٞۚ ذَٰلِكَ ٱلۡيَوۡمُ ٱلَّذِي كَانُواْ يُوعَدُونَ",
            "textNormalized": "خشعه ابصرهم ترهقهم ذله ذلك اليوم الذي كانوا يوعدون",
            "transliteration": "KhashiAAatan absaruhum tarhaquhum thillatun thalika alyawmu allathee kanoo yooAAadoona"
        }
    ]
}