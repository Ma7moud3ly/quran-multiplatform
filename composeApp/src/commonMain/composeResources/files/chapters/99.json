{
    "id": 99,
    "name": "الزلزلة",
    "transliteration": "Az-Zalzalah",
    "type": "medinan",
    "verses": [
        {
            "id": 1,
            "text": "إِذَا زُلۡزِلَتِ ٱلۡأَرۡضُ زِلۡزَالَهَا",
            "textNormalized": "اذا زلزلت الارض زلزالها",
            "transliteration": "Itha zulzilati alardu zilzalaha"
        },
        {
            "id": 2,
            "text": "وَأَخۡرَجَتِ ٱلۡأَرۡضُ أَثۡقَالَهَا",
            "textNormalized": "واخرجت الارض اثقالها",
            "transliteration": "Waakhrajati alardu athqalaha"
        },
        {
            "id": 3,
            "text": "وَقَالَ ٱلۡإِنسَٰنُ مَا لَهَا",
            "textNormalized": "وقال الانسن ما لها",
            "transliteration": "Waqala alinsanu ma laha"
        },
        {
            "id": 4,
            "text": "يَوۡمَئِذٖ تُحَدِّثُ أَخۡبَارَهَا",
            "textNormalized": "يوميذ تحدث اخبارها",
            "transliteration": "Yawmaithin tuhaddithu akhbaraha"
        },
        {
            "id": 5,
            "text": "بِأَنَّ رَبَّكَ أَوۡحَىٰ لَهَا",
            "textNormalized": "بان ربك اوحي لها",
            "transliteration": "Bianna rabbaka awha laha"
        },
        {
            "id": 6,
            "text": "يَوۡمَئِذٖ يَصۡدُرُ ٱلنَّاسُ أَشۡتَاتٗا لِّيُرَوۡاْ أَعۡمَٰلَهُمۡ",
            "textNormalized": "يوميذ يصدر الناس اشتاتا ليروا اعملهم",
            "transliteration": "Yawmaithin yasduru alnnasu ashtatan liyuraw aAAmalahum"
        },
        {
            "id": 7,
            "text": "فَمَن يَعۡمَلۡ مِثۡقَالَ ذَرَّةٍ خَيۡرٗا يَرَهُۥ",
            "textNormalized": "فمن يعمل مثقال ذره خيرا يره",
            "transliteration": "Faman yaAAmal mithqala tharratin khayran yarahu"
        },
        {
            "id": 8,
            "text": "وَمَن يَعۡمَلۡ مِثۡقَالَ ذَرَّةٖ شَرّٗا يَرَهُۥ",
            "textNormalized": "ومن يعمل مثقال ذره شرا يره",
            "transliteration": "Waman yaAAmal mithqala tharratin sharran yarahu"
        }
    ]
}