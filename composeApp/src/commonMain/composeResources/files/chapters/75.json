{
    "id": 75,
    "name": "القيامة",
    "transliteration": "Al-Qiyamah",
    "type": "meccan",
    "verses": [
        {
            "id": 1,
            "text": "لَآ أُقۡسِمُ بِيَوۡمِ ٱلۡقِيَٰمَةِ",
            "textNormalized": "لا اقسم بيوم القيمه",
            "transliteration": "La oqsimu biyawmi alqiyamati"
        },
        {
            "id": 2,
            "text": "وَلَآ أُقۡسِمُ بِٱلنَّفۡسِ ٱللَّوَّامَةِ",
            "textNormalized": "ولا اقسم بالنفس اللوامه",
            "transliteration": "Wala oqsimu bialnnafsi allawwamati"
        },
        {
            "id": 3,
            "text": "أَيَحۡسَبُ ٱلۡإِنسَٰنُ أَلَّن نَّجۡمَعَ عِظَامَهُۥ",
            "textNormalized": "ايحسب الانسن الن نجمع عظامه",
            "transliteration": "Ayahsabu alinsanu allan najmaAAa AAithamahu"
        },
        {
            "id": 4,
            "text": "بَلَىٰ قَٰدِرِينَ عَلَىٰٓ أَن نُّسَوِّيَ بَنَانَهُۥ",
            "textNormalized": "بلي قدرين علي ان نسوي بنانه",
            "transliteration": "Bala qadireena AAala an nusawwiya bananahu"
        },
        {
            "id": 5,
            "text": "بَلۡ يُرِيدُ ٱلۡإِنسَٰنُ لِيَفۡجُرَ أَمَامَهُۥ",
            "textNormalized": "بل يريد الانسن ليفجر امامه",
            "transliteration": "Bal yureedu alinsanu liyafjura amamahu"
        },
        {
            "id": 6,
            "text": "يَسۡـَٔلُ أَيَّانَ يَوۡمُ ٱلۡقِيَٰمَةِ",
            "textNormalized": "يسل ايان يوم القيمه",
            "transliteration": "Yasalu ayyana yawmu alqiyamati"
        },
        {
            "id": 7,
            "text": "فَإِذَا بَرِقَ ٱلۡبَصَرُ",
            "textNormalized": "فاذا برق البصر",
            "transliteration": "Faitha bariqa albasaru"
        },
        {
            "id": 8,
            "text": "وَخَسَفَ ٱلۡقَمَرُ",
            "textNormalized": "وخسف القمر",
            "transliteration": "Wakhasafa alqamaru"
        },
        {
            "id": 9,
            "text": "وَجُمِعَ ٱلشَّمۡسُ وَٱلۡقَمَرُ",
            "textNormalized": "وجمع الشمس والقمر",
            "transliteration": "WajumiAAa alshshamsu waalqamaru"
        },
        {
            "id": 10,
            "text": "يَقُولُ ٱلۡإِنسَٰنُ يَوۡمَئِذٍ أَيۡنَ ٱلۡمَفَرُّ",
            "textNormalized": "يقول الانسن يوميذ اين المفر",
            "transliteration": "Yaqoolu alinsanu yawmaithin ayna almafarru"
        },
        {
            "id": 11,
            "text": "كَلَّا لَا وَزَرَ",
            "textNormalized": "كلا لا وزر",
            "transliteration": "Kalla la wazara"
        },
        {
            "id": 12,
            "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ ٱلۡمُسۡتَقَرُّ",
            "textNormalized": "الي ربك يوميذ المستقر",
            "transliteration": "Ila rabbika yawmaithin almustaqarru"
        },
        {
            "id": 13,
            "text": "يُنَبَّؤُاْ ٱلۡإِنسَٰنُ يَوۡمَئِذِۭ بِمَا قَدَّمَ وَأَخَّرَ",
            "textNormalized": "ينبوا الانسن يوميذ بما قدم واخر",
            "transliteration": "Yunabbao alinsanu yawmaithin bima qaddama waakhkhara"
        },
        {
            "id": 14,
            "text": "بَلِ ٱلۡإِنسَٰنُ عَلَىٰ نَفۡسِهِۦ بَصِيرَةٞ",
            "textNormalized": "بل الانسن علي نفسه بصيره",
            "transliteration": "Bali alinsanu AAala nafsihi baseeratun"
        },
        {
            "id": 15,
            "text": "وَلَوۡ أَلۡقَىٰ مَعَاذِيرَهُۥ",
            "textNormalized": "ولو القي معاذيره",
            "transliteration": "Walaw alqa maAAatheerahu"
        },
        {
            "id": 16,
            "text": "لَا تُحَرِّكۡ بِهِۦ لِسَانَكَ لِتَعۡجَلَ بِهِۦٓ",
            "textNormalized": "لا تحرك به لسانك لتعجل به",
            "transliteration": "La tuharrik bihi lisanaka litaAAjala bihi"
        },
        {
            "id": 17,
            "text": "إِنَّ عَلَيۡنَا جَمۡعَهُۥ وَقُرۡءَانَهُۥ",
            "textNormalized": "ان علينا جمعه وقرءانه",
            "transliteration": "Inna AAalayna jamAAahu waquranahu"
        },
        {
            "id": 18,
            "text": "فَإِذَا قَرَأۡنَٰهُ فَٱتَّبِعۡ قُرۡءَانَهُۥ",
            "textNormalized": "فاذا قرانه فاتبع قرءانه",
            "transliteration": "Faitha qaranahu faittabiAA quranahu"
        },
        {
            "id": 19,
            "text": "ثُمَّ إِنَّ عَلَيۡنَا بَيَانَهُۥ",
            "textNormalized": "ثم ان علينا بيانه",
            "transliteration": "Thumma inna AAalayna bayanahu"
        },
        {
            "id": 20,
            "text": "كَلَّا بَلۡ تُحِبُّونَ ٱلۡعَاجِلَةَ",
            "textNormalized": "كلا بل تحبون العاجله",
            "transliteration": "Kalla bal tuhibboona alAAajilata"
        },
        {
            "id": 21,
            "text": "وَتَذَرُونَ ٱلۡأٓخِرَةَ",
            "textNormalized": "وتذرون الاخره",
            "transliteration": "Watatharoona alakhirata"
        },
        {
            "id": 22,
            "text": "وُجُوهٞ يَوۡمَئِذٖ نَّاضِرَةٌ",
            "textNormalized": "وجوه يوميذ ناضره",
            "transliteration": "Wujoohun yawmaithin nadiratun"
        },
        {
            "id": 23,
            "text": "إِلَىٰ رَبِّهَا نَاظِرَةٞ",
            "textNormalized": "الي ربها ناظره",
            "transliteration": "Ila rabbiha nathiratun"
        },
        {
            "id": 24,
            "text": "وَوُجُوهٞ يَوۡمَئِذِۭ بَاسِرَةٞ",
            "textNormalized": "ووجوه يوميذ باسره",
            "transliteration": "Wawujoohun yawmaithin basiratun"
        },
        {
            "id": 25,
            "text": "تَظُنُّ أَن يُفۡعَلَ بِهَا فَاقِرَةٞ",
            "textNormalized": "تظن ان يفعل بها فاقره",
            "transliteration": "Tathunnu an yufAAala biha faqiratun"
        },
        {
            "id": 26,
            "text": "كَلَّآ إِذَا بَلَغَتِ ٱلتَّرَاقِيَ",
            "textNormalized": "كلا اذا بلغت التراقي",
            "transliteration": "Kalla itha balaghati alttaraqiya"
        },
        {
            "id": 27,
            "text": "وَقِيلَ مَنۡۜ رَاقٖ",
            "textNormalized": "وقيل من راق",
            "transliteration": "Waqeela man raqin"
        },
        {
            "id": 28,
            "text": "وَظَنَّ أَنَّهُ ٱلۡفِرَاقُ",
            "textNormalized": "وظن انه الفراق",
            "transliteration": "Wathanna annahu alfiraqu"
        },
        {
            "id": 29,
            "text": "وَٱلۡتَفَّتِ ٱلسَّاقُ بِٱلسَّاقِ",
            "textNormalized": "والتفت الساق بالساق",
            "transliteration": "Wailtaffati alssaqu bialssaqi"
        },
        {
            "id": 30,
            "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ ٱلۡمَسَاقُ",
            "textNormalized": "الي ربك يوميذ المساق",
            "transliteration": "Ila rabbika yawmaithin almasaqu"
        },
        {
            "id": 31,
            "text": "فَلَا صَدَّقَ وَلَا صَلَّىٰ",
            "textNormalized": "فلا صدق ولا صلي",
            "transliteration": "Fala saddaqa wala salla"
        },
        {
            "id": 32,
            "text": "وَلَٰكِن كَذَّبَ وَتَوَلَّىٰ",
            "textNormalized": "ولكن كذب وتولي",
            "transliteration": "Walakin kaththaba watawalla"
        },
        {
            "id": 33,
            "text": "ثُمَّ ذَهَبَ إِلَىٰٓ أَهۡلِهِۦ يَتَمَطَّىٰٓ",
            "textNormalized": "ثم ذهب الي اهله يتمطي",
            "transliteration": "Thumma thahaba ila ahlihi yatamatta"
        },
        {
            "id": 34,
            "text": "أَوۡلَىٰ لَكَ فَأَوۡلَىٰ",
            "textNormalized": "اولي لك فاولي",
            "transliteration": "Awla laka faawla"
        },
        {
            "id": 35,
            "text": "ثُمَّ أَوۡلَىٰ لَكَ فَأَوۡلَىٰٓ",
            "textNormalized": "ثم اولي لك فاولي",
            "transliteration": "Thumma awla laka faawla"
        },
        {
            "id": 36,
            "text": "أَيَحۡسَبُ ٱلۡإِنسَٰنُ أَن يُتۡرَكَ سُدًى",
            "textNormalized": "ايحسب الانسن ان يترك سدي",
            "transliteration": "Ayahsabu alinsanu an yutraka sudan"
        },
        {
            "id": 37,
            "text": "أَلَمۡ يَكُ نُطۡفَةٗ مِّن مَّنِيّٖ يُمۡنَىٰ",
            "textNormalized": "الم يك نطفه من مني يمني",
            "transliteration": "Alam yaku nutfatan min manayyin yumna"
        },
        {
            "id": 38,
            "text": "ثُمَّ كَانَ عَلَقَةٗ فَخَلَقَ فَسَوَّىٰ",
            "textNormalized": "ثم كان علقه فخلق فسوي",
            "transliteration": "Thumma kana AAalaqatan fakhalaqa fasawwa"
        },
        {
            "id": 39,
            "text": "فَجَعَلَ مِنۡهُ ٱلزَّوۡجَيۡنِ ٱلذَّكَرَ وَٱلۡأُنثَىٰٓ",
            "textNormalized": "فجعل منه الزوجين الذكر والانثي",
            "transliteration": "FajaAAala minhu alzzawjayni alththakara waalontha"
        },
        {
            "id": 40,
            "text": "أَلَيۡسَ ذَٰلِكَ بِقَٰدِرٍ عَلَىٰٓ أَن يُحۡـِۧيَ ٱلۡمَوۡتَىٰ",
            "textNormalized": "اليس ذلك بقدر علي ان يحي الموتي",
            "transliteration": "Alaysa thalika biqadirin AAala an yuhyiya almawta"
        }
    ]
}